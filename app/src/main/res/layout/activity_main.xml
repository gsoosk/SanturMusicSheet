<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/note_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">


            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_0" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_1_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_2_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_3_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_4_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bnote_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/note_5_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bsilent_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/silent_0" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bsilent_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/silent_1" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bsilent_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/silent_2" />

            <far.zad.gsoosk.musiccomposer.Notes.NoteButton
                android:id="@+id/bsilent_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/silent_3" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">



        </LinearLayout>



        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>